<div class="row">
  <div class="col-md-6">
    <div class="card">
      <div class="card-header">
        Sales Data Product Wise

      </div>
      <div class="card-body no-padding">
        <div class="table-responsive">
          <table class="table card-tdefaultable">
            <thead>
              <tr>
                <th>Products</th>
                <th>Quantity(MT)</th>
                <th>Sales</th>
              </tr>
            </thead>
            <tbody>
              <% @products.each do |pro| %>

                <tr>
                  <td><%= pro.name %></td>
                  <td><%= pro.sales_outbounds.where("date BETWEEN ? AND ?",@beginning_of_week,@today).sum(:total_tons) %></td>
                  <td>
                    <span class="badge badge-success badge-icon">
                      <i class="fa fa-check" aria-hidden="true"></i>
                      <span><%= pro.sales_outbounds.where("date BETWEEN ? AND ?",@beginning_of_week,@today).sum(:metric_tons) %></span>
                    </span>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
